<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleDisplayName</key>
    <string>Voice AI LLM</string>
    <key>CFBundleExecutable</key>
    <string>VoiceAILLM</string>
    <key>CFBundleIdentifier</key>
    <string>com.voiceaillm.app</string>
    <key>CFBundleName</key>
    <string>VoiceAILLM</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleShortVersionString</key>
    <string>1.0.0</string>
    <key>CFBundleVersion</key>
    <string>1.0.0</string>
    <key>LSRequiresIPhoneOS</key>
    <true/>
    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>
    <key>UIRequiresFullScreen</key>
    <true/>
    
    <!-- Background audio capability for TTS -->
    <key>UIBackgroundModes</key>
    <array>
        <string>audio</string>
    </array>
    
    <!-- Microphone usage description for voice recognition -->
    <key>NSMicrophoneUsageDescription</key>
    <string>Voice AI LLM uses the microphone for voice recognition and voice input features.</string>
    
    <!-- Speech recognition usage description -->
    <key>NSSpeechRecognitionUsageDescription</key>
    <string>Voice AI LLM uses speech recognition to convert your voice input to text for AI interaction.</string>
    
    <!-- Network usage descriptions for WebView -->
    <key>NSLocalNetworkUsageDescription</key>
    <string>Voice AI LLM needs network access for web browsing and AI services.</string>
    
    <!-- Camera usage description (for web content) -->
    <key>NSCameraUsageDescription</key>
    <string>Voice AI LLM may access camera for web-based features.</string>
    
    <!-- Location usage description (for web content) -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>Voice AI LLM may access location for web-based features.</string>
    
    <!-- Photo library access for WebView -->
    <key>NSPhotoLibraryUsageDescription</key>
    <string>Voice AI LLM may access photo library for web-based file uploads.</string>
    
    <!-- Media capture permissions for WebView -->
    <key>NSMicrophoneUsageDescription</key>
    <string>Voice AI LLM may access microphone for web-based features and voice recognition.</string>
    
    <!-- Support all interface orientations -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
    
    <!-- Allow arbitrary loads for WebView (adjust as needed for security) -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <true/>
        <key>NSAllowsLocalNetworking</key>
        <true/>
    </dict>
    
</dict>
</plist> 